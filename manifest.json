{
  "manifest_version": 2,

  "name": "URL Expander",
  "description": "This extension expands shortened urls",
  "version": "1.0",
  "background": {
    "scripts": ["unshorten.js"]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus",
    "http://*/",
    "https://*/"
  ]
}
